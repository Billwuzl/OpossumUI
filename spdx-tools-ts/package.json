{
  "name": "spdx-tools-ts",
  "description": "A tool to handle spdx format",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "packageurl-js": "^0.0.5",
    "uuid": "^8.3.2",
    "typescript": "^4.3.5",
    "@types/jest": "^27.0.1",
    "@types/js-yaml": "^4.0.3",
    "@types/uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.15.0",
    "jest": "^27.2.0",
    "ts-jest": "^27.0.5"
  },
  "scripts": {
    "postinstall": "tsc",
    "test": "jest"
  },
  "main": "build/spdxTools.js",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
